{
  "logging": {
    "enabled": true,
    "directory": "logs",
    "logfile": "logfile.txt"
  },
  "serial": {
    "com": {
      "windows": "COM8",
      "linux": "/dev/ttyUSB0"
    },
    "baudrate": 115200,
    "timeout": 1,
    "bytesize": 8,
    "parity": "none",
    "stopbits": 1
  },
  "timing": {
    "poll-time-period": 0.05,
    "ping-time-period": 5
  }
}